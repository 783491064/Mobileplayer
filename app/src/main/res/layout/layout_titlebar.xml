<?xml version="1.0" encoding="utf-8"?>
<com.example.bjc.mobileplayer.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ff3097fd"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_height="60dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_topbanner_logo"/>
    <TextView
        android:id="@+id/tv_title_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" 全网收索"
        android:textSize="14sp"
        android:textColor="@drawable/titlebar_tv_selector"
        android:drawableLeft="@drawable/tv_search_drawable_selector"
        android:layout_marginLeft="20dp"
        android:background="@drawable/tv_search_bg_selector"/>
    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_topbanner_game"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dao"
            android:layout_alignRight="@+id/tv_game"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_history"
        android:src="@drawable/ic_topbanner_record"/>
</com.example.bjc.mobileplayer.view.TitleBar>