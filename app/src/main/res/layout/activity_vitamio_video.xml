<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_system_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <!--播放控件-->
    <io.vov.vitamio.widget.VideoView
        android:id="@+id/videoview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--控制面板-->
    <include layout="@layout/concroller_top" android:id="@+id/contraller"/>
    <include layout="@layout/pb_center" android:id="@+id/pb_center"/>
    <include layout="@layout/ll_loading" android:id="@+id/ll_loading"/>
</RelativeLayout>
